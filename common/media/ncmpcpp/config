# for song format you can use:
#
# %l - length
# %f - short filename
# %F - full filename
# %a - artist
# %t - title
# %b - album
# %y - year
# %n - track number
# %g - genre
# %c - composer
# %p - performer
# %d - disc
# %C - comment
# %r - begin right align
#
# you can also put them in { } and then it will be displayed
# only if all requested values are available and/or define alternate
# value with { }|{ } eg. {%a - %t}|{%f}

song_list_format = "{%a - %t}|{%f}%r{(%l)}"

song_columns_list_format = "(5){l} (15){a} (20){b} (30){t} (50){f}"
